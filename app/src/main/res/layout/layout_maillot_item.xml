<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/MaillotName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgTrikot"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtMaillotPartner"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/maillots_partner"
        app:layout_constraintStart_toEndOf="@+id/imgTrikot"
        app:layout_constraintTop_toBottomOf="@+id/MaillotName" />

    <TextView
        android:id="@+id/MaillotPartner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:text="MaillotPartner"
        android:textAlignment="textStart"
        app:layout_constraintStart_toEndOf="@+id/txtMaillotPartner"
        app:layout_constraintTop_toBottomOf="@+id/MaillotName" />

    <TextView
        android:id="@+id/txtLeaderVirt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/maillots_leader_virt"
        app:layout_constraintStart_toEndOf="@+id/imgTrikot"
        app:layout_constraintTop_toBottomOf="@+id/txtMaillotPartner" />

    <TextView
        android:id="@+id/leaderInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/maillots_noleader"
        android:textAlignment="textStart"
        app:layout_constraintStart_toEndOf="@+id/txtLeaderVirt"
        tools:layout_editor_absoluteY="75dp" />

    <ImageView
        android:id="@+id/imgTrikot"
        android:layout_width="89dp"
        android:layout_height="76dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/maillots" />

    <TextView
        android:id="@+id/txtLeaderReal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/maillots_leader_real"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgTrikot"
        app:layout_constraintTop_toBottomOf="@+id/txtLeaderVirt" />

</android.support.constraint.ConstraintLayout>