<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
    </style>

    <style name="TabLayoutTextApperance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">8dp</item>
    </style>
    <style name="HeaderTitle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ToolbarText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_toolbar</item>
    </style>
    <style name="ToolbarValue">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_toolbar</item>
        <item name="android:background">@color/colorPrimaryLight</item>
        <item name="android:shape">@drawable/tab_value_shape</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
    </style>

</resources>
